<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShopEase.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShopEase"
    Shell.TabBarForegroundColor="Blue"
    Shell.TabBarBackgroundColor="#ADD8E6"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Welcome" x:Name="welcome_splash_screen"><ShellContent Title="Welcome" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" /></Tab>
        <Tab Title="Login" x:Name="login_page"><ShellContent Title="Login" ContentTemplate="{DataTemplate local:LoginPage}" Route="LoginPage" /></Tab>
        <Tab Title="Signup" x:Name="signup_page"><ShellContent Title="Signup" ContentTemplate="{DataTemplate local:SignupPage}" Route="SignupPage" /></Tab>
    </TabBar>

</Shell>
